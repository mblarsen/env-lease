{
  "$schema": "https://charm.land/crush.json",
  "mcp": {
    "tm": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "--package=task-master-ai",
        "task-master-ai"
      ]
    },
    "gopls": {
      "type": "stdio",
      "command": "gopls",
      "args": [
        "mcp"
      ]
    },
    "context7": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ]
    }
  },
  "lsp": {
    "go": {
      "command": "gopls"
    }
  }
}
